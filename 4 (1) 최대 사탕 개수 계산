#include "stdafx.h"
int main(void)
{   
   int money, price, result;      
   
   printf("현재 가지고 있는 돈: ");
   scanf_s("%d", &money);   
   
   printf("캔디의 가격: ");  
   scanf_s("%d", &price);   
   
   result = money / price;  
   printf("최대로 살 수 있는 캔디의 개수=%d\n", result); 
   
   result = money % price; 
   printf("캔디 구입 후 남은 돈=%d\n", result);     
   
   return 0;
}
