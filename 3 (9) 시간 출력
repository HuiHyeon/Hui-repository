#include "stdafx.h"

int main(void)
{
   int time, minute, second;
   
   printf("초단위의 시간을 입력하시오:(32억초이하) ");
   scanf_s("%d", &time);
   
   minute = time / 60;
   second = time % 60;
   
   printf("%d초는 %d분 %d초입니다.\n", time, minute, second);
   
   return 0;
}

//#define SEC_PER_MINUTE 60 정의하여 사용해도 됨
