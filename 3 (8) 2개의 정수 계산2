#include "stdafx.h"
int main(void)
{   
   double x, y, result;      
   
   printf("두개의 정수를 입력하시오: ");   
   scanf_s("%lf %lf", &x, &y);      
   
   result = x + y;   
   printf("%f + %f = %f\n", x, y, result);

   result = x - y;   
   printf("%f - %f = %f\n", x, y, result);      

   result = x * y;   
   printf("%f * %f = %f\n", x, y, result);     

   result = x / y;  
   printf("%f / %f = %f\n", x, y, result);        

   return 0;
}
