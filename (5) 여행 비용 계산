#include "stdafx.h"

int main(void)
{
   int days, airplane, hotel, money, sum;
   
   printf("여행은 몇박인가요?: ");
   scanf_s("%d", &days);
   
   printf("항공권 가격: ");
   scanf_s("%d", &airplane);
   
   printf("호텔 1박 가격: ");
   scanf_s("%d", &hotel);
   
   printf("하루에 필요한 용돈: ");
   scanf_s("%d", &money);
   
   sum = (hotel + money) * days + airplane;
   
   printf("========================\n");
   printf("총 여행 비용: %d\n", sum);
   printf("========================\n");
   
   return 0;
}
